{
  "compilerOptions": {
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "**/node_modules",
    "**/webpack",
    "**/sample-project"
  ]
}
